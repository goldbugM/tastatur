{
  "version": 2,
  "name": "mkboard",
  "builds": [
    {
      "src": "root/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "root/lib/**",
          "root/public/**",
          "packages/**",
          "node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/root/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/root/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "root/index.js": {
      "maxDuration": 30
    }
  }
}