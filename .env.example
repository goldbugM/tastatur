# Example environment configuration
# Copy this file to .env.development for local development

# Application URL (change to your domain in production)
APP_URL=http://localhost:3000/

# Cookie settings
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
COOKIE_SECURE=false

# Database settings (optional - defaults to SQLite in development)
# DATABASE_CLIENT=mysql
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=3306
# DATABASE_DATABASE=mkboard
# DATABASE_USERNAME=mkboard
# DATABASE_PASSWORD=

# External services (optional - leave empty to disable)
GOOGLE_TAG_MANAGER_ID=
CLOUDFLARE_ANALYTICS_ID=
COOKIEBOT_CLIENT_ID=
PADDLE_TOKEN=
PADDLE_PRICE_ID=

# Development settings
NODE_ENV=development
LOG_LEVEL=debug